@model Shuvaev.IDP.Controllers.Account.AdditionalAuthenticationFactorViewModel

<div class="login-page">
    <div class="page-header">
        <h1>Additional Authentication</h1>
    </div>

    @Html.Partial("_ValidationSummary")

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Validation code validation</h3>
                </div>
                <div class="panel-body">
                    <form asp-controller="Account" asp-action="AdditionalAuthenticationFactor" method="post">
                        <input type="hidden" asp-for=@Model.ReturnUrl/>
                        <input type="hidden" asp-for=@Model.RememberLogin/>
                        <input type="text" asp-for=@Model.Code
                               autocomplete="false"
                               placeholder="Please enter the code"
                               autofocus/>
                        <input type="submit"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>